# =========================
# All-in-One AI Content Generator
# =========================

# OpenAI API key for content generation
OPENAI_API_KEY=sk-your_api_key_here

# Ngrok authentication token (for public URL via Streamlit)
NGROK_AUTH_TOKEN=your_ngrok_token_here

# Default language for content generation (50+ languages supported)
DEFAULT_LANGUAGE=en

# Number of variations to generate per prompt
DEFAULT_VARIATIONS=1

# Approximate word count per content piece
DEFAULT_WORD_COUNT=500

# Content tone or style (e.g., informative, persuasive, formal, casual)
DEFAULT_TONE=informative

# Content category (e.g., marketing, blog, product description)
DEFAULT_CATEGORY=general

# Optional SEO keywords (comma separated)
DEFAULT_SEO_KEYWORDS=

# Optional: AI image generation prompt (if using image generation feature)
DEFAULT_IMAGE_PROMPT=
